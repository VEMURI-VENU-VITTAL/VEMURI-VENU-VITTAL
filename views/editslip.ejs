<%layout('layouts/boilerplate')%>

<form action="/editslip?_method=patch" method="post">
    <input type="text" value="<%=num%>" style="width: 20px; height:20px; border-radius: 50%; display: none;" name="num">
    <div class="mb-3" >
        <label for="text" class="form-label">Enter text</label>
        <textarea class="form-control" id="text" rows="3" name="text" style="width: 250px;" required><%=slip.text%></textarea>
      </div>

      <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="lock_category" name="active" style="width: 250px;">
        <option value="unsecure" selected>unsecured</option>
        <option value="free">secured</option>
      </select>
      
      <button>EDIT slip</button>
</form>